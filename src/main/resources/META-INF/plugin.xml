<idea-plugin>
    <id>prs.debesson.nbspHighlighter</id>
    <name>Non-breakable-spaces Highlighter</name>
    <version>@version@</version>
    <vendor email="quentin.debesson@viseo.com" url="https://github.com/qdebesson">Quentin DEBESSON</vendor>

    <description><![CDATA[
        Non-breakable-spaces Highlighter Plugin Template
    ]]></description>

    <!-- Match with 'intellij.version' in build.gradle -->
    <idea-version since-build="173.3655.1"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <annotator language="" implementationClass="psr.debesson.annotators.GeneralAnnotator"/>
        <colorSettingsPage implementation="psr.debesson.settings.GeneralColorSettings"/>

    </extensions>

    <change-notes>
        Add nbsp field in "General Additions" with possibility to set custom highlighting.
    </change-notes>
</idea-plugin>
